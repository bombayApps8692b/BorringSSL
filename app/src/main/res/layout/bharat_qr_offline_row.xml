<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="1dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="1dp">

    <LinearLayout
        android:id="@+id/layoutDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="?attr/colorPrimaryTheme"
        android:orientation="horizontal"

        >

        <com.ui.MTextViewRegular
            android:id="@+id/tvShortDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="04-04-2017"
            android:padding="5dp"
            android:textStyle="bold"
            android:background="?attr/colorPrimaryTheme"
            android:textColor="?attr/dialogTextColor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutDate"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="180"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:background="@drawable/bharat_qr" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutMiddle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="100"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <com.ui.MTextViewRegular
                android:id="@+id/transaction_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="BHARAT QR"
                android:padding="2dp"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                android:visibility="gone"
                android:textStyle="bold" />

            <com.ui.MTextViewRegular
                android:id="@+id/billNo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRight"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="150"
            android:orientation="vertical">

            <com.ui.MTextViewRegular
                android:id="@+id/amount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="2085"
                android:paddingTop="1dp"
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="130"
            android:visibility="gone"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivSwipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:background="@drawable/swipe" />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>