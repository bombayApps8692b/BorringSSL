<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_weight="130"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
        <ImageView
             android:id="@+id/card_type"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:layout_gravity="center_horizontal"
             android:background="@drawable/card"
        />
            <com.ui.MTextView
                android:id="@+id/tvCardNo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Preauth"
                android:textColor="@color/textColor"
                android:padding="1dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textSize="25sp"/>



        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutMiddle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingLeft="10dp">
            <com.ui.MTextViewRegular
                android:id="@+id/transaction_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="PreAuth"
                android:padding="2dp"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="30sp"/>
            <com.ui.MTextViewRegular
                android:id="@+id/invoice_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Invoice No: "
                android:textColor="@color/textColor"
                android:padding="1dp"
                android:textStyle="bold"
                android:textSize="25sp"/>

            <com.ui.MTextView
                android:id="@+id/reference_no"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:hint="Ref: 000000001477"
                android:padding="1dp"
                android:textSize="25sp"/>

            <com.ui.MTextView
                android:id="@+id/tvTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="123"
                android:padding="1dp"
                android:textColor="@color/textColor"
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutRight"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="110"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginRight="5dp">

            <com.ui.MTextViewRegular
                android:id="@+id/amount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="2085"
                android:textSize="33sp"
                android:paddingTop="1dp"
                android:gravity="center_horizontal"/>
            <com.ui.MTextViewRegular
                android:id="@+id/settlement_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="UNSETTLE"
                android:layout_marginTop="3dp"
                android:textColor="@color/textColor"
                android:padding="2dp"
                android:textSize="22sp"
                android:background="#cdcdcd"
                android:gravity="center"/>
            <com.ui.MTextViewRegular
                android:id="@+id/tvStatus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="11:10:22"
                android:layout_marginTop="5dp"
                android:background="#cdcdcd"
                android:textColor="@color/textColor"
                android:padding="2dp"
                android:textSize="22sp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>